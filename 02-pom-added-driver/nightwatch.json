{
  "src_folders": ["tests"],
  "page_objects_path": "page-objects",
  "globals_path": "./globals.js",
  "selenium": {
    "start_process": false
  },
  "test_settings": {
    "safari": {
      "webdriver": {
        "start_process": true,
        "server_path": "/usr/bin/safaridriver",
        "port": 9513
      },
      "desiredCapabilities": {
        "browserName": "safari",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    },
    "chrome": {
      "webdriver": {
        "start_process": true,
        "server_path": "node_modules/.bin/chromedriver",
        "port": 9514
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "chromeOptions": {
          "args": [
          ]
        }
      }
    },
    "chrome-headless": {
      "webdriver": {
        "start_process": true,
        "server_path": "node_modules/.bin/chromedriver",
        "port": 9515
      },
      "screenshots": {
        "enabled": true,
        "path": "tests_screens"
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "chromeOptions": {
          "args": [
            "headless",
            "no-sandbox",
            "disable-gpu"
          ],
          "binary": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
        }
      }
    },
    "firefox": {
      "webdriver": {
        "start_process": true,
        "server_path": "node_modules/.bin/geckodriver",
        "port": 9516
      },
      "desiredCapabilities": {
        "browserName": "firefox",
        "acceptInsecureCerts": true
      }
    }
  }
}
